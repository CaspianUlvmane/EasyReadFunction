{
  "name": "EasyRead",
  "manifest_version": 3,
  "version": "1.0",
  "author": "Caspian Ulvmåne",
  "developer": {
    "name": "Caspian Ulvmåne",
    "url": "https://www.linkedin.com/in/caspian-ulvmåne/"
  },
  "action": {},
  "icons": { "16": "icon.png" },
  "web_accessible_resources": [{
    "resources": ["content.js"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "background.js"]
    }
  ],
  "permissions": [
    "tabs",
    "bookmarks",
    "scripting"
  ]
}
