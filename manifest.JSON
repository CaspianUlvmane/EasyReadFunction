{
  "name": "EasyRead",
  "manifest_version": 3,
  "version": "1.0",
  "action": {},
  "icons": { "16": "icon.png" },
  "web_accessible_resources": [{
    "resources": ["content.js"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "background.js"]
    }
  ],
  "background": {
    "js": "content.js",
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "scripting"
  ]
}
